<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- bean definitions here -->
	<bean class="com.dao.UserDao" id="userdao">
		<property name="dBname" value="springDB"></property>
	</bean>
	
	<bean class="com.bean.RoleBean" id="rolebean">
		<property name="roleName" value="rolename"></property>
	</bean>
	<bean class="com.bean.UserBean" id="userbean">
		<property name="firstname" value="fname"></property>
		<property name="email" value="email"></property>
		<property name="password" value="password"></property>
	</bean>
</beans>